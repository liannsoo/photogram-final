<h1>List of Users</h1>

<table border='1'>
  <thead>
    <tr>
      <th>Username</th>
      <th>Private?</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.private ? 'Yes' : 'No' %></td>
        <td>
          <% if user_signed_in? && user != current_user %>
            <% case @follow_statuses[user.id] %>
            <% when 'accepted' %>
              <%= button_to 'Unfollow', unfollow_follow_requests_path(id: user.id), method: :delete, class: 'btn btn-danger' %>
            <% when 'pending' %>
              <%= button_to 'Cancel Request', cancel_request_follow_requests_path(id: user.id), method: :delete, class: 'btn btn-warning' %>
            <% else %>
              <%= button_to 'Follow', follow_follow_requests_path(follow_request: { recipient_id: user.id }), method: :post, class: 'btn btn-primary' %>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to 'Show details', user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
