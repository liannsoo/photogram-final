<h1>List of Users</h1>

<table border='1'>
  <thead>
    <tr>
      <th>Username</th>
      <th>Private?</th>
      <th>Show details</th>
      <% if user_signed_in? %>
        <th>Follow</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.private ? 'Yes' : 'No' %></td>
        <td><%= link_to 'Show details', user_path(user), class: "btn btn-secondary" %></td>
        <% if user_signed_in? %>
          <td>
            <% if current_user == user %>
              <!-- Redirect to their profile without a follow action -->
              <%= button_to 'Go to Your Profile', user_path(user), method: :get, class: 'btn btn-primary' %>
            <% else %>
              <% case @follow_statuses[user.id] %>
              <% when 'accepted' %>
                <%= link_to 'Unfollow', unfollow_user_path(user), method: :delete, class: 'btn btn-danger', data: { turbo: false } %>
              <% when 'pending' %>
                <div>
                  Request sent.
                  <%= link_to 'Cancel', cancel_follow_user_path(user), method: :delete, class: 'btn btn-warning', data: { turbo: false } %>
                </div>
              <% else %>
                <%= button_to 'Follow', follow_user_path(user), method: :post, class: 'btn btn-primary' %>
              <% end %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
